<?xml version="1.0" encoding="utf-8" ?>
<local:PageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CollectionViewPopupTest"
             x:Class="CollectionViewPopupTest.MainPage">

    <Grid ColumnDefinitions="*, *">
        <VerticalStackLayout Grid.Column="0">
            <Label Text="CollectionView popup" />
            <Button Text="Show" Command="{Binding ShowCollectionView}" />
        </VerticalStackLayout>
    </Grid>
</local:PageBase>
